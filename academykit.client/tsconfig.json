{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "pretty": true,
    "noEmit": true,
    "sourceMap": false,
    "baseUrl": "src",
    "jsx": "react-jsx",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "paths": {
      "@pages/*": ["pages/*"],
      "@configs/*": ["configs/*"],
      "@components/*": ["Components/*"],
      "@routes/*": ["Routes/*"],
      "@utils/*": ["utils/*"],
      "@context/*": ["context/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@hoc/*": ["hoc/*"]
    }
  },
  "include": ["src", "js", "js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
